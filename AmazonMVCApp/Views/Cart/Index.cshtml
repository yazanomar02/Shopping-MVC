@{
}

@using AmazonMVCApp.Repo
@inject IStateRepository stateRepository



<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                @await Component.InvokeAsync("ShoppingCart", new { cartId = stateRepository.GetValue("CartId") })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                @await Html.PartialAsync("_PlaceOrder")
            </div>
        </div>
    </div>
</div>
